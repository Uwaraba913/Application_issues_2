<table class="table">
  <tr>
    <% book.book_comments.each do |book_comment| %>
    <td><%= link_to user_path(book_comment.user) do %>
      <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpeg") %></br>
      <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
      <% if book_comment.user == current_user %>
      <td><%= link_to "Destroy", book_book_comment_path(book,book_comment),  class:"btn btn-danger", method: :delete, remote: true %></td>
      <% end %>
    <% end %>
  </tr>
</table>