<%= render 'seaches/seaches' %>
<h1><%= @model%> search for "<%= @content %>"</h1>
  <% if @model == 'user' %>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Name</th>
          <th>Introduction</th>
          <th>Link</th>
        </tr>
      </thead>

      <tbody>
        <% @records.each do |user| %>
        <tr>
          <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
          <td><%= link_to "Show", user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% elsif @model == 'book'%>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Category</th>
          <th>Link</th>
        </tr>
      </thead>

      <tbody>
        <% @records.each do |book| %>
        <tr>
          <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= book.category %></td>
          <td><%= link_to "Show", book_path(book) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% elsif @model == 'category'%>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
          <th>Category</th>
          <th>Link</th>
        </tr>
      </thead>

      <tbody>
        <% @records.each do |book| %>
        <tr>
          <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= book.category %></td>
          <td><%= link_to "Show", book_path(book) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>


